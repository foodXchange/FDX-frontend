{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true
  },
  "include": [
    "server.ts",
    "build-for-deploy.ts",
    "scripts/**/*.ts",
    "api-server.ts",
    "websocket-server.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "src"
  ]
}